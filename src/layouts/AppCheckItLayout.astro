---
import "../styles/global.css";
import AppNavBar, { type SpecificLink } from "../components/AppNavBar.astro";
import Layout from "./Layout.astro";
import { ClientRouter } from "astro:transitions";

const links: SpecificLink[] = [
	{ name: "Presentation", href: "/check-it/check-it", key: "Presentation" },
	{
		name: "Privacy Policy",
		href: "/check-it/privacy-policy",
		key: "Privacy",
	},
	{
		name: "Terms & Conditions",
		href: "/check-it/terms-conditions",
		key: "Terms",
	},
	{ name: "Delete Account", href: "/check-it/delete-account", key: "Delete" },
];
---

<Layout title="Check-It">
	<AppNavBar links={links} />
	<main class="flex-grow w-full flex flex-col">
		<ClientRouter />
		<slot />
	</main>
</Layout>
