---
import "../styles/global.css";
import AppNavBar, { type SpecificLink } from "../components/AppNavBar.astro";
import Layout from "./Layout.astro";
import { ClientRouter } from "astro:transitions";

const links: SpecificLink[] = [
	{
		name: "Presentation",
		href: "/neoncuber/neoncuber",
		key: "Presentation",
	},
	{
		name: "Privacy Policy",
		href: "/neoncuber/privacy-policy",
		key: "Privacy",
	},
	{
		name: "Terms & Conditions",
		href: "/neoncuber/terms-conditions",
		key: "Terms",
	},
];
---

<Layout title="NeonCuber">
	<AppNavBar links={links} />
	<main class="flex-grow w-full flex flex-col">
		<ClientRouter />
		<slot />
	</main>
</Layout>
