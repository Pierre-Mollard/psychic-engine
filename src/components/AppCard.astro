---
export interface Props {
    title: string;
    description: string;
    logo: string;
    link: string;
    colorLight: any;
    colorDark: any;
}
const { title, description, logo, link, colorLight, colorDark } = Astro.props;
---

<a href={link} class="sm:m-4 m-2 block group sm:w-64 w-48 cursor-pointer mt-8">
    <div
        class="flex flex-col items-start gap-4 w-full h-full"
        style={`--shadow-glow-color-light: ${colorLight}; --shadow-glow-color-dark: ${colorDark}`}
    >
        <!-- Image -->
        <img
            src={logo}
            alt="Image Title"
            class="w-full sm:h-64 h-48 object-cover rounded-2xl shadow-lg transition-all duration-300 ease-in-out group-hover:shadow-xl group-hover:shadow-glow group-hover:scale-105 z-1 group-hover:z-1"
        />

        <!-- Text panel -->
        <div
            class="relative w-full p-4 rounded-xl shadow-xl bg-dark/30 dark:bg-black/30 backdrop-blur-md text-white"
        >
            <!-- Title -->
            <h1 class="text-xl font-semibold drop-shadow text-center">
                {title}
            </h1>

            <!-- Description -->
            <p
                class="mt-2 text-sm text-center transition-all duration-300 ease-in-out
          sm:opacity-0 sm:max-h-0 sm:overflow-hidden
          sm:group-hover:opacity-100 sm:group-hover:max-h-40"
            >
                {description}
            </p>
        </div>
    </div>
</a>

<style>
    /* Adding glow effect to the image on hover */
    .group:hover .group-hover\:shadow-glow {
        box-shadow:
            0 0 10px 2px var(--shadow-glow-color-light),
            0 0 20px 4px var(--shadow-glow-color-dark);
    }
</style>
