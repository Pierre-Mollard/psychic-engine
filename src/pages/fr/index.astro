---
import Layout from "../../layouts/Layout.astro";
import AppCard from "../../components/AppCard.astro";
import checkItLogo from "../../assets/applis/checkit.png";
import francoQuizLogo from "../../assets/applis/francoquiz.png";
import "../../styles/star-gradient.css";
---

<Layout title="Pierre Mollard" lang="fr">
	<div
		class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 flex-grow flex-col flex items-center justify-center"
	>
		<div
			class="flex flex-col sm:flex-row justify-center sm:justify-evenly items-center gap-0 sm:gap-32"
		>
			<AppCard
				title="Check-It"
				description="Créez des objectifs quotidiens, puis suivez et atteignez-les."
				logo={checkItLogo.src}
				link="/check-it/check-it"
				colorLight="#E2E8F0"
				colorDark="#F9E79F "
			/>
			<AppCard
				title="FrancoQuiz"
				description="Apprenez la géographie de la France à travers différents quiz."
				logo={francoQuizLogo.src}
				link="/francoquiz/francoquiz"
				colorLight="#E2E8F0"
				colorDark="#38BDF8 "
			/>
		</div>
	</div>
	<div id="stars"></div>
	<div id="stars2"></div>
	<div id="stars3"></div>
</Layout>
